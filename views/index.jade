extends layout

doctype
html( lang="en" )
    head
        title TESTING
        meta( charset='utf-8' )
        meta( http-equiv='X-UA-Compatible', content='IE=edge' )
        meta( name='viewport', content='width=device-width, initial-scale=1.0' )
        meta( name='description', content='TESTING' )

    block content
        script( src='/scripts/indexView.js' )

        script.
            $(function () {
                $("#successfulBtn").click(function () {
                    UIAction.toggleAllRowsOfType(".success", ".success-badge");
                });

                $("#partialSuccessBtn").click(function () {
                    UIAction.toggleAllRowsOfType(".warning", ".partialSuccess-badge");
                });

                $("#failureBtn").click(function () {
                    UIAction.toggleAllRowsOfType(".danger", ".failure-badge");
                });

                $("#activeBtn").click(function () {
                    UIAction.toggleAllRowsOfType(".other", ".active-badge");
                });

            });

            $("#rowFilter").keyup(function(){
                filterRows($(this).val().toString().toLowerCase());
            })

        .row
            .col-md-3
                button.btn.btn-success.btn-block(type = 'button', id='successfulBtn') Successful&nbsp
                    span.badge.success-badge 15
            .col-md-3
                button(type = 'button', id='partialSuccessBtn').btn.btn-warning.btn-block Partial Success&nbsp
                    span.badge.partialSuccess-badge 15
            .col-md-3
                button(type = 'button', id='failureBtn').btn.btn-danger.btn-block Failure&nbsp
                    span.badge.failure-badge 15
            .col-md-3
                button(type = 'button', id='activeBtn').btn.btn-other.btn-block Active&nbsp
                    span.badge.active-badge 15

        .row
            .col-md-12
                table.table.table-striped.table-bordered
                    thead
                        tr
                            th #
                            th Name
                            th Date
                            th Other
                    tbody
                        tr().success
                            th 1
                            td.name-col-filterable Daniel
                            td The Dude
                            td Some stuff

                        tr.warning
                            th 1
                            td.name-col-filterable Potator
                            td The Dude
                            td Some stuff

                        tr.danger
                            th 1
                            td.name-col-filterable Testing123
                            td The Dude
                            td Some stuff

                        tr.other
                            th 1
                            td.name-col-filterable Hey Man, What's up
                            td The Dude
                            td Some stuff